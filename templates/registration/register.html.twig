{% extends 'base.html.twig' %}
{% block title %}Inscription
{{ parent() }}
{% endblock %}
{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}
<h1 class="text-center mb-5">Inscription</h1>
<div class="row justify-content-center">
    <div class="col-lg-6">
        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
            {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.avatar, {'attr': {'class': 'form-control'}}) }}
            <button type="submit" class="btn btn-primary btn-block mt-4">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}