{% extends 'base.html.twig' %}

{% block title %}Figure{% endblock %}

{% block body %}
    <h1>Figure</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ figure.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ figure.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ figure.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ figure.CreatedAt ? figure.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ figure.modifiedAt ? figure.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Imgfilename</th>
                <td>{{ figure.imgfilename }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_figure_index') }}">back to list</a>

    <a href="{{ path('app_figure_edit', {'id': figure.id}) }}">edit</a>

    {{ include('figure/_delete_form.html.twig') }}
{% endblock %}
